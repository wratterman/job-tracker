<!DOCTYPE html>
<html>
<h1>All Categories </h1>

<% @categories.each do |category| %>
  <li>
    <%= link_to category.name, category_path(category) %>
    <%= link_to "Delete", category_path(category), method: "delete" %>
    <%= link_to "Edit", edit_category_path(category) %>
  </li>
<% end %>
</html>
